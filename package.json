{
  "name": "auto-repair-manager",
  "version": "1.0.0",
  "description": "自動車関連業務管理システム",
  "main": "dist/main/index.js",
  "author": "Your Name",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && npm run dev:main\"",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "dev:main": "npm run build:preload && npm run build:main && cross-env NODE_ENV=development electron dist/main/index.js --inspect=5858",
    "build": "npm run build:preload && npm run build:main && npm run build:renderer",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "build:main": "tsc --project tsconfig.main.json",
    "build:preload": "tsc --project tsconfig.preload.json",
    "clean": "rimraf dist",
    "clean:build": "npm run clean && npm run build",
    "start": "npm run build && electron dist/main/index.js",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:main": "tsc --project tsconfig.main.json --noEmit",
    "type-check:renderer": "tsc --project tsconfig.renderer.json --noEmit"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^5.17.1",
    "@mui/material": "^5.17.1",
    "@reduxjs/toolkit": "^1.9.0",
    "date-fns": "^2.29.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "exceljs": "^4.4.0",
    "googleapis": "^118.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.0",
    "react": "^18.3.1",
    "react-big-calendar": "^1.8.0",
    "react-datepicker": "^4.10.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.43.0",
    "react-redux": "^8.0.0",
    "react-router-dom": "^6.8.0",
    "react-select": "^5.7.0",
    "recharts": "^2.5.0",
    "sqlite3": "^5.1.0",
    "winston": "^3.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.0",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.0",
    "@types/node": "^18.14.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/sqlite3": "^3.1.8",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "@vitejs/plugin-react": "^3.1.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.34.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.4.0",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.0.0",
    "typescript": "^4.9.0",
    "vite": "^4.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourcompany.auto-repair-manager",
    "productName": "Auto Repair Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "resources/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Auto Repair Manager"
    }
  }
}
