{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@main/*": ["src/main/*"],
      "@renderer/*": ["src/renderer/*"],
      "@preload/*": ["src/preload/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "removeComments": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "release",
    "**/*.test.ts",
    "**/*.test.tsx",
    
    // 一時的に除外（段階的に修正していく）
    "src/renderer/components/features/staff/StaffForm/**/*",
    "src/renderer/components/features/staff/StaffList/**/*", 
    "src/renderer/services/api/base-api.ts",
    "src/renderer/services/api/staff-api.ts",
    "src/renderer/hooks/useStaff.ts",
    "src/renderer/hooks/useApi.ts",
    "src/renderer/pages/StaffPage/**/*"
  ]
}